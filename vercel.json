{
  "functions": {
    "api/index.py": {
      "runtime": "python3.12",
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "buildCommand": "python -m pip install -r requirements.txt && python manage.py collectstatic --noinput"
}
